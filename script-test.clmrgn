function factorial x {
	let result 0;

	if (x < 0) {
		bruh "can't take the factorial of a negative number or non-integer";
	};

	if (x == 0) {
		set result 1;
	} {
		set result (x * factorial (x - 1));
	};

	return result;
};

print (factorial 6);
print (factorial 3);
print (factorial 2);
print (factorial 1);
print (factorial 0);
